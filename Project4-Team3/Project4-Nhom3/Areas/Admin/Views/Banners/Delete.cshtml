@model RepositoryLayer.BannerVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary">Bạn thực sự muốn xóa Banner này?</h3>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.TieuDe, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="font-weight:bold;">
                        @Html.DisplayFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control", style = "font-weight:bold;" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UrlLink, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="font-weight:bold;">
                        <img src="~/images/anhsanpham/@Url.Content(Model.UrlLink)" class="rounded-circle" width="100" height="100" asp-append-version="true" />
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.isActive, htmlAttributes: new { @class = "control-label col-md-2", style = "font-weight:bold;" })
                    @Html.DisplayFor(model => model.isActive)

                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a class="btn btn-primary" href="/Admin/Banners">Quay lại</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>