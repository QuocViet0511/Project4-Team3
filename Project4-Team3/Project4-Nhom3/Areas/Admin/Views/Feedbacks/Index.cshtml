@model IEnumerable<DomainLayer.Models.Feedback>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<link href="~/Content/Data/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

<div id="content">
    <div class="container-fluid">

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">Danh sách Feedback</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr style="Background: #456bd9">

                                <th style="color:white">
                                    STT
                                </th>
                                <th style="color:white">
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th style="color:white">
                                    @Html.DisplayNameFor(model => model.TieuDe)
                                </th>
                                <th style="color:white">
                                    @Html.DisplayNameFor(model => model.NoiDung)
                                </th>
                                <th style="color:white">
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th style="color:white">
                                    @Html.DisplayNameFor(model => model.Phone)
                                </th>
                                <th style="color:white">
                                    @Html.DisplayNameFor(model => model.NgayTao)
                                </th>
                                <th style="color:white">
                                    @Html.DisplayNameFor(model => model.Rating)
                                </th>
                                <th style="color:white">Tuỳ chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var i = 1;} 
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @i
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td class="col-sm-2">
                                    @item.TieuDe
                                </td>
                                <td class="col-sm-5">
                                    @item.NoiDung
                                </td>
                                <td class="col-sm-2">
                                    @item.Email
                                </td>
                                <td class="col-sm-3">
                                    @item.Phone
                                </td>
                                <td class="col-sm-3">
                                    @item.NgayTao
                                </td>
                                <td class="col-sm-3">
                                    @item.Rating
                                </td>
                                <td class="col-sm-3" style="text-align : center">
                                    @Html.ActionLink("Xoá", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                                i++;
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
