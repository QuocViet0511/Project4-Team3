@model DomainLayer.Models.KeySP

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h1>Xóa Key sản phẩm</h1>

<h3>Bạn có thực sự muốn xóa Key này?</h3>
<div>
    <h4>Key Sản Phẩm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KeyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KeyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KeyInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KeyInfo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NgayTao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayTao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrangThaiKey)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThaiKey)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" href="/Admin/KeySPs/Index">Quay lại</a>
    </form>
</div>
