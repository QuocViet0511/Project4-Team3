@model RepositoryLayer.SanPhamVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary">Bạn thực sự muốn xóa Sản Phẩm này?</h3>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.RollNo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="font-weight:bold;">
                @Html.DisplayFor(model => model.RollNo, new { htmlAttributes = new { @class = "form-control", style = "font-weight:bold;" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TenDanhMucSanPham, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="font-weight:bold;">
                @Html.DisplayFor(model => model.TenDanhMucSanPham, new { htmlAttributes = new { @class = "form-control", style = "font-weight:bold;" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TenSanPham, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="font-weight:bold;">
                @Html.DisplayFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control", style = "font-weight:bold;" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ThongTin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="font-weight:bold;">
                @Html.DisplayFor(model => model.ThongTin, new { htmlAttributes = new { @class = "form-control", style = "height:120px;font-weight:bold;" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.UrlVideo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="font-weight:bold;">
                @Html.DisplayFor(model => model.UrlVideo, new { htmlAttributes = new { @class = "form-control", style = "height:120px;font-weight:bold;" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="font-weight:bold;">
                <img src="~/images/anhsanpham/@Url.Content(Model.Image)" class="rounded-circle" width="100" height="100" asp-append-version="true" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GiaTien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="font-weight:bold;">
                @Html.DisplayFor(model => model.GiaTien, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @step = "0.01", @value = "0", style = "font-weight:bold;" } })

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NgayTao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="font-weight:bold;">
                @Html.DisplayFor(model => model.NgayTao, new { htmlAttributes = new { @class = "form-control", style = "font-weight:bold;" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NgaySua, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="font-weight:bold;">
                @Html.DisplayFor(model => model.NgaySua, new { htmlAttributes = new { @class = "form-control", style = "font-weight:bold;" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MaGiamGia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="font-weight:bold;">
                @Html.DisplayFor(model => model.MaGiamGia, new { @class = "form-control", style = "font-weight:bold;" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TenKey, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="font-weight:bold;">
                @Html.DisplayFor(model => model.TenKey, new { @class = "form-control", style = "font-weight:bold;" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a class="btn btn-primary" href="/Admin/SanPhams">Quay lại</a>
            </div>
        </div>
    </div>
        }
    </div>
</div>


