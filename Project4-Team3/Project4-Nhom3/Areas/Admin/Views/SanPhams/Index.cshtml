@model IEnumerable<RepositoryLayer.SanPhamVM>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<link href="~/Content/Data/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<style>
	.text-overflow {
		height: 100px;
		overflow: hidden;
		text-overflow: ellipsis;
		line-height: 25px;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		max-width: 100% !important;
	}
</style>
<div id="content">

	<!-- Topbar -->
	@*<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
	<h1 class="h3 mb-2 text-gray-800" style="color:black"><b>Quản lý sản phẩm</b></h1>
	</nav>*@
	<!-- End of Topbar -->
	<!-- Begin Page Content -->
	<div class="container-fluid">

		<!-- DataTales Example -->
		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h4 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h4>
				<a class="float-lg-right btn btn-primary" href="/Admin/SanPhams/Create">Thêm sản phẩm</a>

			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
						<thead>
							<tr style="Background: #456bd9">

								<th style="color:white">
									@Html.DisplayNameFor(model => model.RollNo)
								</th>
								<th style="color:white">
									@Html.DisplayNameFor(model => model.TenDanhMucSanPham)
								</th>
								<th style="color:white">
									@Html.DisplayNameFor(model => model.TenSanPham)
								</th>
								<th style="color:white">
									@Html.DisplayNameFor(model => model.ThongTin)
								</th>
								<th style="color:white">
									@Html.DisplayNameFor(model => model.Image)
								</th>
								<th style="color:white">
									@Html.DisplayNameFor(model => model.GiaTien)
								</th>
								<th style="color:white">
									@Html.DisplayNameFor(model => model.NgayTao)
								</th>
								<th style="color:white">
									@Html.DisplayNameFor(model => model.NgaySua)
								</th>
								<th style="color:white">
									@Html.DisplayNameFor(model => model.MaGiamGia)
								</th>
								<th style="color:white">
									@Html.DisplayNameFor(model => model.TenKey)
								</th>
								<th style="color:white">Tuỳ chọn</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@item.RollNo
									</td>
									<td>
										@item.TenDanhMucSanPham
									</td>
									<td>
										@item.TenSanPham
									</td>
									<td class="col-xs-3">
										<p class="text-overflow" height="100px">@item.ThongTin</p>
									</td>
									<td class="col-xs-2">
										<img src="@item.Image" height="100px">
									</td>
									<td>
										@item.GiaTien
									</td>
									<td>
										@item.NgayTao
									</td>
									<td>
										@item.NgaySua
									</td>
									<td>
										@item.MaGiamGia
									</td>
									<td>
										@item.TenKey
									</td>
									<td style="text-align : center">
										@Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
										@Html.ActionLink("Xoá", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
									</td>
								</tr>
							}

						</tbody>
					</table>
				</div>
			</div>
		</div>

	</div>
</div>
